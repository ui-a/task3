<div>
  <%= flash[:notice] %>
</div>


<div class="container">
<div class="row mt-3">

<!--ユーザー-->
    <div class="col-md-3">
<table>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
  <p><a class="btn btn-outline-secondary" href="/users/<%= current_user.id %>/edit">
    <i class="fa-solid fa-user-gear"></i></a></p>
  <% end %>
</table>



<!--新規投稿-->
<%= render 'books/new', books: @books %>
</div>

<!--ユーザー投稿一覧-->
    <div class="col-md-8 ml-auto">

<h2>Books</h2>

<table class="table">
<div>

  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</div>
</table>

    </div>
  </div>
</div>