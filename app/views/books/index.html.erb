
<div class="container">
  <%= render 'books/error', books: @books %>
<div class="row mt-3">

    <div class="col-md-3">

  <h2>User info</h2>
  <table class="table">
  <%= image_tag current_user.get_profile_image(100, 100) %>
  <tr>
  <th>name</th>
  <th><%= current_user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
  </tr>
  </table>

  <% if @user == current_user %>
    <%= link_to edit_user_path(@user), method: :get do%>
      <a href="/users/<%= current_user.id %>/edit">
        <button type="button" class="btn btn-outline-secondary btn-block">
        <i class="fa-solid fa-user-gear"></i></button></a>
    <% end %>
  <% end %>



<!--新規投稿-->
<%= render 'new', books: @books %>
  </div>

    <div class="col-md-8 offset-md-1">


<table class="table">

<div>
<h2>Books</h2>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100, 100) %><br></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</div>
</table>

    </div>
  </div>
</div>