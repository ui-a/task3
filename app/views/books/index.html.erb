
<div class="container">
  <%= render 'books/error', books: @books %>
<div class="row mt-3">

    <div class="col-md-3">
<div>
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100, 100) %>
  <p>name:<%= current_user.name %></p>
  <p>introduction:<%= current_user.introduction %></p>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %>
    <i class="fa-solid fa-user-gear" style="color: #6c757d;"></i></p>
  <% end %>
</div>


<!--新規投稿-->
<%= render 'new', books: @books %>
  </div>

    <div class="col-md-8 ml-auto">


<table class="table">

<div>
<h2>Books</h2>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100, 100) %><br></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</div>
</table>

    </div>
  </div>
</div>