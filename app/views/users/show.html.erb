<div class="container">
  <div class="row">

<!--ユーザー-->
    <div class="col-lg-4">
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %>
    <i class="fa-solid fa-user-gear" style="color: #6c757d;"></i></p>
  <% end %>
</div>



<!--新規投稿-->
<h1>New Book</h1>

  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
    </div>

<!--ユーザー投稿一覧-->
    <div class="col-lg-8">

<h2>Books</h2>

<table class="table table-striped">
<div>

  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</div>
</table>

    </div>
  </div>
</div>