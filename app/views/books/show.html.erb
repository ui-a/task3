
<div class="container">
  <div class="row">


    <div class="col-lg-4">
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %>
    <i class="fa-solid fa-user-gear" style="color: #6c757d;"></i></p>
  <% end %>
</div>
      


<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
    </div>

    <div class="col-lg-8">


<table class="table table-striped">

<div>
  <h2>Book detail</h2>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100, 100) %></td>
    <td><%= @book.title%></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
    <% end %>
  </tr>
</div>
</table>
