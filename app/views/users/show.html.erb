<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row mt-3">

<!--ユーザー-->
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
      <%= image_tag @user.get_profile_image(100, 100) %>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <%= link_to edit_user_path(@user), method: :get do%>
        <button type="button" class="btn btn-outline-secondary btn-block">
        <i class="fas fa-user-cog"></i></button>
      <% end %>

<!--新規投稿-->
    <%= render 'books/new', books: @books %>
    </div>


<!--ユーザー投稿一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
                <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
     </table>
    </div>
  </div>
</div>